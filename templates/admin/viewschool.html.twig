{% extends 'base.html.twig' %}

{% block title %}View SCHOOL{% endblock %}


  {% block body %}


    <!--==== SECTION LISTE ETUDIANTS ====-->
    <section class="container mt-5">
      <div class="row">
        <div class="col-10">
          <h1 class="r">Fiche de {{ view_school.identity }}</h1>
        </div>
        <div class="col-2">
          <a type="button" class="btn btn-info d-flex align-items-center justify-content-center mt-2" href="{{ path('index_entreprise') }}">retour</a>
