                </tr>
                <tr>
                  <td>Téléphone : </td>
                  <td>{{ view_school.phone }}</td>
                </tr>
                <tr>
                  <td>Email : </td>
                  <td>{{ view_school.email }}</td>
                </tr>
              </tbody>
            </table>
          </div>

          <div class="col-12 col-md-4 col-lg-4 border">
