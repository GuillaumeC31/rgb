{% extends 'base.html.twig' %}

{% block title %}Backoffice{% endblock %}

{% block body %}
{% block styles %}
	<style>
		body{
  background-color:#f2f2f2;
}
h1{
font-size:4rem;
background-color:#b54447;
color:white;
}
h2{
  font-size:3rem;
}

.table{
  background-color:#d9d9d9;
}
	</style>
{% endblock styles %}




<h1 class="text-center my-5">
	Fiche utilisateur <a href="{{ path('list_valid') }}">
		<img src="{{asset('assets/img/student.png')}}" class=" m-5" alt="icon bdd"></a>
</h1>
<br>



<div class="container justify-content-center my-5 ">
  <div class="row">
    <div class="col-6 justify-content-center">

     <form method="post" class="my-5 justify-content-center">
      <h2 class="text-center">{{users.firstname}}  {{users.lastname}}</h2><br>


  <table class="table">
      <tbody>
          <tr>
            <th class="text-danger">Prénom :</th>
            <td>{{users.firstname}} </td>
          </tr>

          <tr>
            <th class="text-danger">Nom de famille :</th>
            <td>{{users.lastname}}</td>
          </tr>

          <tr>
            <th class="text-danger">Adresse actuelle :</th>
            <td>{{users.address}}</td>
          </tr>

          <tr>
            <th class="text-danger">Code postale :</th>
            <td>{{users.zipcode}}</td>
          </tr>

          <tr>
            <th class="text-danger">Ville résidente:</th>
            <td>{{users.city}}</td>
         </tr>

          <tr>
            <th class="text-danger">Numero de teléphone :</th>
            <td>{{users.phone}}</td>
          </tr>

          <tr>
            <th class="text-danger">Adresse email :</th>
            <td>{{users.email}}</td>
          </tr>

          <tr>
            <th class="text-danger">Moyenne générale :</th>
            <td>{{users.mark}}</td>
          </tr>

          <tr>
            <th class="text-danger">Date de naissance :</th>
            <td>{{users.birthdate|date('d/m/Y ') }}</td>
          </tr>

          <tr>
            <th class="text-danger">Date d'enregistrement :</th>
            <td>{{users.dateRegistration|date('d/m/Y  H:i') }}</td>
          </tr>
          </tbody>
        </table><br>
              
              <a type="submit" class="btn btn-outline-success" href="{{ path('modif_student', {id: users.id}) }}" class="text-light">modifier</a>
      </form>
    </div>
  </div>
</div>
<a href="{{ path('list_valid') }}" class="text-info"><img src="{{asset('assets/img/back.png')}}" class="m-5 bg-warning p-4" alt="icon bdd"></a>

{% endblock %}
