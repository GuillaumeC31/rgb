{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% block styles %}
	<style>
		body {
	 background-color:#f2f2f2;

}
h1{
color: #4285F4;
}
.table{
  background-color:#d9d9d9;
}
	</style>
{% endblock styles %}


<h1 class="text-center my-5">Modifier Elève</h1>

{% if formValid is not null and formValid == true %}
	<div class="alert alert-success text-center">
		Elève à été modifié dans la base de données<br>
		- l'équipe de RGB -
	</div>
{% elseif formValid is not null and formValid == false %}
	<div class="alert alert-danger text-center">
		{{ errors|join('<br>')|raw }}
	</div>
{% endif %}




<div class="container justify-content-center my-5">
  <div class="row">
    <div class="col-8">


        <form method="post">
           <div class="form mb-3  ">
          <label for="address" class="col-form-label">Adresse</label>
          <div for="address" >
             <input type="text" name="address" id="address" class="form-control" value="{{ user.address }}" >
          </div>
        </div>

         <div class="form  mb-3">
          <label for="zipcode" class="form-label">Code postale</label>
          <div for="zipcode" >
            <input type="text" name="zipcode" id="zipcode" class="form-control" value="{{ user.zipcode }}" >

          </div>
        </div>

         <div class="form  mb-3">
          <label for="city" class="form-label">Ville</label>
          <div for="city" >
            <input type="text" name="city" id="city" class="form-control" placeholder="{{ user.city }}">
          </div>
        </div>


         <div class="form mb-3  ">
          <label for="email" class="col-form-label">Email</label>
          <div for="email">
            <input type="text" name="email" id="email" class="form-control" value="{{ user.email }}">
          </div>
        </div>

         <div class="form  mb-3">
          <label for="phone" class="form-label">Téléphone</label>
          <div for="phone" >
            <input type="text" name="phone" id="phone" class="form-control" value="{{ user.phone }}">
          </div>
        </div>

         <div class="form mb-3  ">
          <label for="web" class="col-form-label">Web site</label>
          <div for="web">
            <input type="text" name="web" id="web" class="form-control" value="{{ user.web }}">
          </div>
        </div>

        <div class="form mb-3  ">
          <label for="github" class="col-form-label">Github</label>
          <div for="github">
            <input type="text" name="github" id="github" class="form-control" value="{{ user.github }}">
          </div>
        </div>
        <a type="button" class="btn btn-outline-warning" href="{{ path('list_valid') }}">Retour</a>
        <button type="submit" class="btn btn-outline-success" href="{{ path('list_valid') }}">Valider</button>

       </form>
    </div>
  </div>
</div>



{% endblock %}

